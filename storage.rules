rules_version = '2';

service firebase.storage {
  function userIsAdmin() {
    return ("admin" in request.auth.token) && request.auth.token.admin == true;
  }
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if false;
    }
    match /uploaded/{path=**} {
      allow read: if true;
      allow write: if userIsAdmin();
    }
    match /carts/{path=**} {
      allow read: if true;
      allow write: if false;
    }
    match /articles/{path=**} {
      allow read: if true;
      allow write: if false;
    }
    match /fabrics/{path=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
